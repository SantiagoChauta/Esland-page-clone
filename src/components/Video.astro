---
import Button from "./Button.astro";
import { getI18N } from '@/i18n/'

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---


<div class="relative h-[80vh] w-full max-w-[100vw] md:aspect-video md:h-full">
    <div
        class='absolute left-1/2 right-0 top-14 z-10 m-auto flex -translate-x-1/2 flex-col items-center'
    >

        <img 
        class="block aspect-[343/243] w-full"
        alt={i18n.VIDEO_ALT}
        src="/logo-home.svg"
        />
        <Button url='https://www.youtube.com/watch?v=1YmpPrqKP-g'>
            {i18n.VIDEO_BUTTON}
        </Button>
    </div>
    <video  class="w-full h-screen object-cover object-top" 
        src="/Video.mp4" 
        autoplay 
        loop 
        muted
        style="clip-path: polygon(100% 0, 100% 85%, 50% 100%, 0 85%, 0 0);" 
        ></video>
    <video  
        class="absolute -bottom-48 blur-3xl -z-40 " 
        src="/Video.mp4" 
        autoplay 
        loop 
        muted

        ></video>
</div>